<!DOCTYPE html>
<html lang="en">
    <%- include('layout/header'); -%>
    <%- include('layout/script'); -%>
    <body id="page-top">
        <!-- Navigation-->
        <%- include('layout/navigation'); -%>
        <% if (locals.message) { %>
            <div class="mt-5 mb-3">
              <div class="custom-alert">
                <strong><%= message %></strong>
                <button type="button" class="custom-close" aria-label="Close"></button>
              </div>
            </div>
          <% } 
          %>
    <div class="container my-4">
        <div class="row">
            <div class="col-md-5 mx-auto">
                
                    <div class="login-container">
                    <h1>Login</h1>
                    <form action="/login" method="post">
                        <input type="text" name="username" placeholder="Username">
                        <input type="password" name="password" placeholder="Password">
                        <button type="submit">Login</button>
                    </form>
                </div>
            </div>
            
            
                    <div class="col-md-5 mx-auto">
                        <div class="signup">
                    <h1>Signup</h1>
                    <form method="POST" action="/signup">
                            <div class="mb-3">
                              <label for="new-username" class="form-label">New Username:</label>
                              <input type="text" class="form-control" id="new-username" name="username" placeholder="Enter a new username" required>
                            </div>
                            <div class="mb-3">
                              <label for="new-password" class="form-label">New Password:</label>
                              <input type="password" class="form-control" id="new-password" name="password" placeholder="Enter a new password" required>
                            </div>
                            <div class="mb-3">
                              <label for="confirm-password" class="form-label">Confirm Password:</label>
                              <input type="password" class="form-control" id="confirm-password" name="confirmPassword" placeholder="Confirm your password" required>
                            </div>
                            <div class="mb-3">
                              <label for="user-type" class="form-label">User Type:</label>
                              <select class="form-select" id="user-type" name="userType" required>
                                <option value="Driver">Driver</option>
                                <option value="Examiner">Examiner</option>
                                <option value="Admin">Admin</option>
                              </select>
                            </div>
                            <button type="submit" class="btn btn-dark btn-block">Signup</button>
                    </form>
                </div>
                </div></div>
            </div>
    </body>
    </html>
